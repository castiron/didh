<div class="columns">
  <section class="column-single">

    <h2 class="column--heading" id="contact-us">Sign up</h2>
    <p>TKTK Some text about signing up.</p>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

      <%= devise_error_messages! %>

      <div class="row">
        <%= f.label :email %><%= f.email_field :email, :class => 'text-input' %>
      </div>

      <div class="row">
        <%= f.label :password %><%= f.password_field :password, :class => 'text-input' %>
      </div>

      <div class="row">
        <%= f.label :password_confirmation %><%= f.password_field :password_confirmation, :class => 'text-input' %></div>
      <div>

      <div class="row" style="margin: 1em 0;">
        <%= f.submit "Sign up", :class => 'field--button' %>
      </div>

    <% end %>
    
    <p class="small">
      <%= render :partial => "devise/shared/links" %>
    </p>
    
  </section>
</div>

